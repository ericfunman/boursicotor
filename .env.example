# Database Configuration - SQLite (no PostgreSQL dependency)
DB_NAME=boursicotor.db

# Interactive Brokers Configuration
IBKR_HOST=127.0.0.1
IBKR_PORT=4002  # IB Gateway paper trading: 4002, live: 4001, TWS paper: 7497, TWS live: 7496
# Note: IBKR_CLIENT_ID n'est PAS défini ici
# - Streamlit utilise explicitement client_id=1 pour la connexion principale
# - Celery génère automatiquement un ID aléatoire (2-999) pour chaque tâche
# Cela permet plusieurs connexions simultanées sans conflit
IBKR_ACCOUNT=DU0118471  # Votre compte paper trading

# Trading Configuration
PAPER_TRADING=True
MAX_POSITION_SIZE=10000  # EUR
RISK_PER_TRADE=0.02  # 2%
STOP_LOSS_PERCENT=0.05  # 5%

# Data Collection
DEFAULT_INTERVAL=1min
DATA_RETENTION_DAYS=365

# ML Models
MODEL_RETRAIN_INTERVAL=7  # days
CONFIDENCE_THRESHOLD=0.75

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/boursicotor.log

# API
API_HOST=0.0.0.0
API_PORT=8000

# External API Keys (get free keys from respective websites)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here
